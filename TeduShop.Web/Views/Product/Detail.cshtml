            <div class="cont span_2_of_3">
                <div class="labout span_1_of_a1">
                    <!-- start product_slider -->
                    <ul id="etalage">
                        <li>
                            <a href="#">
                                <img class="etalage_thumb_image" src="@Model.Image" alt="@Model.Name" />
                                <img class="etalage_source_image" src="@Model.Image" alt="@Model.Name" />
                            </a>
                        </li>
                        @{
                            var moreImg = ViewBag.moreImg;
                            foreach (var img in moreImg)
                            {
                                <li>
                                    <img class="etalage_thumb_image" src="@img" alt="@Model.Name" />
                                    <img class="etalage_source_image" src="@img" alt="@Model.Name" />
                                </li>
                            }
                        }
                    </ul>


                    <!-- end product_slider -->
                </div>
                <div class="cont1 span_2_of_a1">
                    <h3 class="m_3">@Model.Name</h3>

                    <div class="price_single">
                        <span class="reducedfrom">@Model.Price.ToString("N0")</span>                        
                        <span class="actual">@Model.PromotionPrice.Value.ToString("N0")</span>
                        @{
                            var listTag = (IEnumerable<TeduShop.Web.Models.TagViewModel>)ViewBag.tag;
                            foreach (var tag in listTag)
                            {
                                <a href="/Tags/@(tag.ID).html">@tag.Name</a>                                
                            }
                        }  
                    </div>
                    <ul class="options">
                        <h4 class="m_9">Select a Size</h4>
                        <li><a href="#">6</a></li>
                        <li><a href="#">7</a></li>
                        <li><a href="#">8</a></li>
                        <li><a href="#">9</a></li>
